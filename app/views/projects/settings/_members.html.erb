<% roles = Role.find_all_givable
   members = @project.memberships.sorted.to_a %>

<p><%= link_to l(:label_member_new), new_project_membership_path(@project), :remote => true, :class => "icon icon-add" %></p>

<% if members.any? %>
<% target_roles = (WorkflowTransition.where(:workspace_id => @project.workspace_id).pluck(:role_id) + roles.reject(&:assignable).map(&:id)).uniq %>
<% disabled_roles = roles.map(&:id) - User.current.managed_roles(@project).map(&:id) %>
<div id="member-roles-div-model" style="display: none;">
  <% roles.each do |role| %>
  <div<%= " class=unused" unless target_roles.include?(role.id) %>> 
    <label>
      <%= check_box_tag('membership[role_ids][]',
                        role.id, false,
                        :id => nil,
                        :disabled => false) %>
      <% if !role.assignable? %>
        <span style="color: darkblue;"><%= role %></span>
      <% elsif target_roles.include?(role.id) %>
        <%= role %>
      <% else %>
        <span style="color: darkred;"><%= role %></span>
      <% end %>
    </label><br />
  </div>
  <% end %>
</div>
<table class="list members">
  <thead>
    <tr>
      <th><%= l(:label_user) %> / <%= l(:label_group) %></th>
      <th><%= l(:label_role_plural) %> (<a onclick='$(".unused").toggle();'><%= l(:label_all) %></a>)</th>
      <th style="width:15%"></th>
      <%= call_hook(:view_projects_settings_members_table_header, :project => @project) %>
    </tr>
  </thead>
  <tbody>
  <% members.each do |member| %>
  <% next if member.new_record? %>
  <tr id="member-<%= member.id %>" class="<%= cycle 'odd', 'even' %> member">
  <td class="name <%= member.principal.class.name.downcase %>"><%= link_to_user member.principal %></td>
  <td class="roles">
    <span id="member-<%= member.id %>-roles"><%= member.roles.collect(&:to_s).sort.join(', ') %></span>
      <%= form_for(member,
                   {:as => :membership, :remote => true,
                    :url => membership_path(member),
                    :method => :put,
                    :html => { :id => "member-#{member.id}-roles-form", :class => 'hol' }}
             ) do |f| %>
        <p id="member-<%= member.id %>-roles-div"></p>
        <%= hidden_field_tag 'membership[role_ids][]', '', :id => nil %>
        <p>
          <%= submit_tag l(:button_save), :class => "small" %>
          <%= link_to_function(l(:button_cancel),
                               "$('#member-#{member.id}-roles').show(); $('#member-#{member.id}-roles-div').html(""); $('#member-#{member.id}-roles-form').hide(); return false;") %>
        </p>
      <% end %>
  </td>
  <td class="buttons">
      <%= link_to_function l(:button_edit),
                           "$('#member-#{member.id}-roles').hide(); expand_div('#member-#{member.id}-roles-div', #{member.roles.pluck(:id)}, #{disabled_roles +
                             member.roles.select{|r| member.has_inherited_role?(r)}.map(&:id)}); $('#member-#{member.id}-roles-form').show(); return false;",
                           :class => 'icon icon-edit' %>
      <%= delete_link membership_path(member),
                      :remote => true,
                      :data => (!User.current.admin? && member.include?(User.current) ? {:confirm => l(:text_own_membership_delete_confirmation)} : {}) if member.deletable? %>
  </td>
  <%= call_hook(:view_projects_settings_members_table_row, { :project => @project, :member => member}) %>
  </tr>
<% end; reset_cycle %>
  </tbody>
</table>
<% else %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
